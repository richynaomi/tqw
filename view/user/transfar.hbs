
<div class="loading">
      <div class="loading-content">
        <span>...Loading</span>
      </div>
    </div>
{{#if user}}
<div >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">TRANSFER TO OTHER COMMERCIAL BANK  </h5>

      </div>
      <div class="modal-body">
          <div class="profile-user-info profile-user-info-striped">
            <div class="profile-info-row">
                    <div class="profile-info-name" style="color:#386782  ;"> Debit From: </div>
                    <div class="profile-info-value">
                            <span class="editable" style="float: left;">{{user.accountNumber}}</span>
                    </div>
            </div>
                 <div class="profile-info-row">
                    <div class="profile-info-name" style="color:#386782  ;">
                        Account Owner:
                    </div>
                    <div class="profile-info-value">
                            <span class="editable" style="float: left;">Mr.{{user.firstName}} {{user.Lastname}}</span>
                    </div>
                 </div>
             <div class="profile-info-row">
                    <div class="profile-info-name" style="color:#386782  ;"> Amount: </div>
                    <div class="profile-info-value">
                            <span class="editable" style="float: left;">${{formattedBalance}}</span>
                    </div>
            </div>

            <form class="form-horizontal" action="/dashboard/transferToOtherBank" method="post">
                <div class="form-group">
                        <div >

                                        {{#if errorMessage}}
                                           <div class="alert alert-danger" role="alert">
                                               {{errorMessage}}
                                            </div>
                                        {{/if}}

                               </div>
                               </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label no-padding-right" for="form-field-1" style="color:#386782  ;"> Receiver Name: </label>

                    <div class="col-sm-7">
                            <input style="border-color:black;" type="text" name="otherbankBankName"  class="col-xs-10 col-sm-7">
                    </div>
                </div>



                   <div class="form-group">
                    <label class="col-sm-5 control-label no-padding-right" for="form-field-1" style="color:#386782  ;"> Receiver Account Number: </label>

                    <div class="col-sm-7">
                            <input style="border-color:black;" type="text" name="otherbankAcctNo" class="col-xs-10 col-sm-7">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label no-padding-right" for="form-field-1" style="color:#386782  ;"> Amount: </label>

                    <div class="col-sm-7">
                            <input style="border-color:black;" type="text" name="otherBankAmount" class="col-xs-10 col-sm-7">
                    </div>
                </div>
                <div class="form-group">
                        <label class="col-sm-5 control-label no-padding-right" for="form-field-1" style="color:#386782;"> Description: </label>
                        <div class="col-sm-7">
                        <input style="border-color:black;" type="text" name="description" id="description" class="col-xs-10 col-sm-7">
                        </div>
                 </div>

                 <div class="form-group">
                        <label class="col-sm-5 control-label no-padding-right" for="form-field-1" style="color:#386782;"> Transaction Pin</label>
                        <div class="col-sm-7">
                        <input style="border-color:black;" type="text" name="transactionpin" id="transactionpin" class="col-xs-10 col-sm-7">
                        </div>

          
          <div class="my-progress-bar"></div>
      
      </div>

      <div class="modal-footer">
        <button type="submit"  class="btn btn-danger">
             <i  class="none"></i>
            Confirm Account
        </button>
        <a href="/dashboard" type="button" class="btn btn-secondary" data-dismiss="modal">Close</a>
         </form>
      </div>
    </div>
  </div>
</div>
{{/if}}